<Button>:
    text: 'Press me' #acts label
    size_hint: (.5, .5) #sets width(first input) and height(second input), numbers can be anywhere between 0 and 1, it defaults to 1
    pos_hint: {'center_x': .5, 'center_y': .5} #sets button position
    on_press: app.on_press_button() #sets the event handler
